---
import Layout from '../layouts/MainGridLayout.astro';
import Section from '../components/common/Section.astro';
import { getCollection } from 'astro:content';
import BlogCard from '../components/common/BlogCard.astro';
import ProjectCard from '../components/common/ProjectCard.astro';
import ProjectModal from '../components/project/ProjectModal.astro';
import HeroSection from '../components/hero/HeroSection.astro';
import { ScrollReveal } from '../components/common';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

// 최근 프로젝트와 스토리 가져오기
const projects = await getCollection('project');
const stories = await getCollection('blog');

const featuredProjects = projects
  .filter(p => p.data.featured)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

const recentStories = stories
  .filter(blog => !blog.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// 프로젝트 레이아웃 구성
const mainFeaturedProject = featuredProjects[0];
const subFeaturedProjects = featuredProjects.slice(1, 3);
---

<Layout title="김진민 - 지속가능한 미래를 설계합니다">
	<!-- Hero Section -->
	<HeroSection />

	<!-- Projects Preview Section -->
	<section class="py-20 bg-gray-50 dark:bg-black">
		<Section size="normal">
			<ScrollReveal 
				direction="fade" 
				delay={0} 
				duration={1000}
				className="text-center mb-16"
				client:load
			>
				<div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-100 to-purple-100 dark:from-blue-900/30 dark:to-purple-900/30 text-blue-600 dark:text-blue-400 rounded-full text-sm font-medium mb-6">
					<span class="relative flex h-2 w-2">
						<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
						<span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
					</span>
					Featured Work
				</div>
				<h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
					주요 프로젝트
				</h2>
				<p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed">
					ESG 전문성과 개발 기술을 결합한 실제 프로젝트들을 확인해보세요
				</p>
			</ScrollReveal>

			{featuredProjects.length > 0 ? (
				<div class="space-y-8">
					<!-- Featured 프로젝트 레이아웃 (순차 애니메이션 적용) -->
					<div class="grid grid-cols-1 lg:grid-cols-12 gap-8 auto-rows-min">
						
						<!-- 메인 Featured 프로젝트 (큰 카드) -->
						{mainFeaturedProject && (
							<ScrollReveal 
								direction="up" 
								delay={0} 
								duration={800}
								className="lg:col-span-8"
								client:load
							>
								<ProjectCard 
									project={mainFeaturedProject} 
									variant="featured" 
									class="h-full"
								/>
							</ScrollReveal>
						)}

						<!-- 서브 Featured 프로젝트들 (작은 카드들) -->
						{subFeaturedProjects.length > 0 && (
							<div class="lg:col-span-4 space-y-6">
								{subFeaturedProjects.map((project, index) => (
									<ScrollReveal 
										direction="up" 
										delay={200 + (index * 150)} 
										duration={700}
										client:load
									>
										<ProjectCard 
											project={project} 
											variant="compact"
											index={index}
										/>
									</ScrollReveal>
								))}
								
								<!-- 추가 프로젝트 보기 카드 -->
								{featuredProjects.length >= 3 && (
									<ScrollReveal 
										direction="up" 
										delay={500} 
										duration={600}
										client:load
									>
										<div class="relative group">
											<div class="aspect-[4/3] bg-gradient-to-br from-blue-500/10 via-purple-500/10 to-green-500/10 dark:from-blue-500/20 dark:via-purple-500/20 dark:to-green-500/20 rounded-2xl border-2 border-dashed border-blue-300 dark:border-blue-600 flex flex-col items-center justify-center text-center p-6 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-300 cursor-pointer">
												<div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
													<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
													</svg>
												</div>
												<h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">더 많은 프로젝트</h3>
												<p class="text-sm text-gray-600 dark:text-gray-400 mb-4">다양한 프로젝트들을 확인해보세요</p>
												<a 
													href="/project"
													class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 font-medium text-sm"
												>
													전체 보기 →
												</a>
											</div>
										</div>
									</ScrollReveal>
								)}
							</div>
						)}
					</div>

					<!-- 모바일에서의 추가 프로젝트들 (lg 이상에서는 숨김) -->
					{subFeaturedProjects.length === 0 && (
						<div class="grid md:grid-cols-2 gap-6 lg:hidden">
							<!-- 빈 공간 채우기용 카드들 -->
							<div class="aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-700 rounded-2xl flex items-center justify-center">
								<div class="text-center">
									<div class="text-4xl mb-4">🚧</div>
									<p class="text-gray-600 dark:text-gray-300 font-medium">새 프로젝트 준비 중</p>
								</div>
							</div>
							<div class="aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-700 rounded-2xl flex items-center justify-center">
								<div class="text-center">
									<div class="text-4xl mb-4">💡</div>
									<p class="text-gray-600 dark:text-gray-300 font-medium">아이디어 구상 중</p>
								</div>
							</div>
						</div>
					)}
				</div>
			) : (
				<!-- 프로젝트가 없을 때 -->
				<div class="text-center py-20">
					<div class="w-32 h-32 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center mx-auto mb-8">
						<svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
						</svg>
					</div>
					<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">흥미진진한 프로젝트를 준비 중입니다</h3>
					<p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-8">ESG와 기술을 결합한 혁신적인 솔루션들을 곧 선보이겠습니다</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a 
							href="/about" 
							class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-all duration-300 font-semibold"
						>
							더 알아보기 →
						</a>
						<a 
							href="mailto:charmjinmean@gmail.com" 
							class="inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 font-semibold"
						>
							프로젝트 문의하기
						</a>
					</div>
				</div>
			)}

			<!-- 전체 프로젝트 보기 버튼 (프로젝트가 있을 때만) -->
			{featuredProjects.length > 0 && (
				<ScrollReveal 
					direction="up" 
					delay={800} 
					duration={600}
					className="text-center mt-16"
					client:load
				>
					<a 
						href="/project" 
						class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 font-semibold shadow-lg text-lg"
					>
						<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
						</svg>
						모든 프로젝트 탐험하기
						<svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
						</svg>
					</a>
				</ScrollReveal>
			)}
		</Section>
	</section>

	<!-- Stories Preview Section -->
	<section class="py-20 bg-white dark:bg-gray-800">
		<Section size="normal">
			<ScrollReveal 
				direction="fade" 
				delay={0} 
				duration={800}
				className="text-center mb-12"
				client:load
			>
				<div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-full text-sm font-medium mb-4">
					<span class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></span>
					Latest Posts
				</div>
				<h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
					최신 블로그
				</h2>
				<p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
					기술, ESG, 그리고 지속가능한 개발에 대한 인사이트를 공유합니다
				</p>
			</ScrollReveal>
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{recentStories.length > 0 ? (
					recentStories.map((blog, index) => (
						<ScrollReveal 
							direction="up" 
							delay={index * 150} 
							duration={600}
							client:load
						>
							<BlogCard blog={blog} variant="simple" />
						</ScrollReveal>
					))
				) : (
					<ScrollReveal 
						direction="fade" 
						delay={0} 
						duration={800}
						className="col-span-full"
						client:load
					>
						<div class="text-center py-12">
							<div class="text-6xl mb-4">📝</div>
							<p class="text-gray-600 dark:text-gray-300 text-lg">블로그를 준비 중입니다.</p>
							<p class="text-gray-500 dark:text-gray-400 mt-2">흥미로운 이야기들을 곧 공유하겠습니다!</p>
						</div>
					</ScrollReveal>
				)}
			</div>
			{recentStories.length > 0 && (
				<ScrollReveal 
					direction="up" 
					delay={600} 
					duration={600}
					className="text-center mt-12"
					client:load
				>
					<a 
						href="/blog/all/page/1" 
						class="inline-flex items-center px-6 py-3 border border-gray-300 text-gray-700 dark:border-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 font-semibold"
					>
						모든 블로그 보기 →
					</a>
				</ScrollReveal>
			)}
		</Section>
	</section>

	<!-- Project Modal -->
	<ProjectModal projects={projects} />
</Layout>
