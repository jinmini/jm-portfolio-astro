  const allPages = paginate(sortedStories, { 
    pageSize: 6,
    params: { category: 'all' }
  });
  paths.push(...allPages);
  
  // ê° ì¹´í…Œê³ ë¦¬ë³„ í˜ì´ì§€
  for (const category of categories) {
