---
type Props = {
  name: string;
};

const { name } = Astro.props;
---

<li class="flex items-baseline gap-6 text-base">
  <div class="w-[80px] min-w-[80px] rounded-md bg-gray-800 dark:bg-gray-600 py-2 text-center text-sm text-white dark:text-gray-100 transition-colors">{name}</div>
  <div class="text-gray-700 dark:text-gray-300"><slot /></div>
</li> 