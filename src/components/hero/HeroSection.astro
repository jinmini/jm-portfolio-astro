---
import { TypingText } from './TypingText.tsx';
---

<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-green-50 dark:from-gray-900 dark:via-gray-800 dark:to-black relative overflow-hidden">

  <!-- 메인 컨테이너 -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- 왼쪽: 텍스트 영역 -->
      <div class="text-center lg:text-left space-y-8">

        <!-- 메인 타이틀 -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white leading-tight">
          안녕하세요!<br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-green-600">
            김진민
          </span>입니다
        </h1>
        
        <!-- 타이핑 애니메이션 영역 -->
        <div class="h-16 sm:h-20">
          <p class="text-xl sm:text-2xl md:text-3xl text-gray-700 dark:text-gray-300 font-medium">
            저는 <TypingText client:load />
          </p>
        </div>

        <!-- 서브타이틀 -->
        <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto lg:mx-0 leading-relaxed">
          자연 생태계와 디지털 생태계의 패턴을 연결하여 <strong class="text-gray-900 dark:text-white">지속가능한 솔루션</strong>을 설계합니다. 
          기술의 힘으로 <strong class="text-green-600 dark:text-green-400">탄소중립 미래</strong>를 만들어갑니다.
        </p>

        <!-- 주요 성과 -->
        <div class="grid grid-cols-3 gap-6 py-8 border-y border-gray-200 dark:border-gray-700">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">12+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">프로젝트</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">3년+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">ESG 경력</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">20+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">기업 컨설팅</div>
          </div>
        </div>

        <!-- 버튼들 -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href="/project" 
            class="group relative px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white rounded-xl transition-all duration-300 transform hover:scale-105 font-semibold shadow-lg hover:shadow-xl flex items-center justify-center gap-2 overflow-hidden"
          >
            <span class="relative z-10">프로젝트 탐험하기</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-700 to-blue-800 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
          <a 
            href="/about" 
            class="group px-8 py-4 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-xl hover:bg-white dark:hover:bg-gray-800 hover:border-gray-400 dark:hover:border-gray-500 transition-all duration-300 font-semibold shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
          >
            스토리 알아보기
            <svg class="w-5 h-5 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- 오른쪽: 프로필 카드 -->
      <div class="relative">
        <!-- 메인 프로필 카드 -->
        <div class="relative bg-white/40 dark:bg-gray-800/40 backdrop-blur-xl rounded-3xl p-8 shadow-2xl border border-white/50 dark:border-gray-700/50 max-w-lg mx-auto">
          <!-- 프로필 이미지 영역 -->
          <div class="relative w-48 h-48 mx-auto mb-8">
            <!-- 배경 그라데이션 -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-400 via-purple-500 to-green-400 rounded-full animate-pulse"></div>
            <!-- 프로필 이미지/이니셜 -->
            <div class="relative w-full h-full bg-gradient-to-br from-blue-500 via-purple-600 to-green-500 rounded-full flex items-center justify-center text-white text-6xl font-bold shadow-2xl">
              JM
            </div>
          </div>

          <!-- 이름과 타이틀 -->
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">김진민</h2>
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-4">AI PM & Carbon Management Specialist</p>
            
            <!-- 전문 분야 태그 -->
            <div class="flex flex-wrap gap-2 justify-center">
              <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-sm rounded-full font-medium">지속가능</span>
              <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 text-sm rounded-full font-medium">ESG</span>
              <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 text-sm rounded-full font-medium">AI</span>
              <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 text-sm rounded-full font-medium">탄소중립</span>
            </div>
          </div>

          <!-- 빠른 연락 버튼 -->
          <div class="grid grid-cols-2 gap-3">
            <a 
              href="/about" 
              class="group flex items-center justify-center gap-2 px-4 py-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition-all duration-300 font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              About
            </a>
            <a 
              href="mailto:charmjinmean@gmail.com" 
              class="group flex items-center justify-center gap-2 px-4 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-all duration-300 font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Contact
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 스크롤 인디케이터 -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-full p-3 shadow-lg border border-gray-200 dark:border-gray-700">
      <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  /* 버튼 호버 효과 개선 */
  .group:hover .group-hover\:translate-x-1 {
    transform: translateX(4px);
  }

  /* 반응형 폰트 크기 조정 */
  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem;
      line-height: 1.1;
    }
  }
</style> 