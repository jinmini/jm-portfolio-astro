---
// 소셜 링크나 이미지 경로 등은 나중에 props로 받을 수 있습니다.
interface Props {
  isAboutPage?: boolean;
}

const { isAboutPage = false } = Astro.props;
---

<div class="bg-white/60 dark:bg-[#6edce4]/50 backdrop-blur-xl rounded-3xl p-6 sm:p-8 shadow-lg border border-white/20 dark:border-white/10 text-center flex flex-col items-center max-w-md mx-auto ring-1 ring-black/5">
  <!-- 프로필 이미지 자리표시자 -->
  <div class="w-28 h-28 sm:w-32 sm:h-32 rounded-full bg-gradient-to-br from-slate-200 to-gray-300 mb-6 border-4 border-white shadow-md flex-shrink-0">
    <img src="/images/profile-fix.webp" alt="김진민 프로필" class="w-full h-full object-cover rounded-full" /> 
  </div>

  <!-- 이름 -->
  <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-2">
    김진민
  </h1>

  <!-- 소개 -->
  <p class="text-base sm:text-lg text-gray-700 dark:text-gray-300 mb-6 leading-relaxed max-w-xs">
    지속가능한 미래를 설계합니다
  </p>

  <!-- 소셜 아이콘 -->
  <div class="flex gap-5 sm:gap-6 mb-8">
    <!-- LinkedIn -->
    <a href="#" aria-label="LinkedIn" class="text-gray-500 dark:text-gray-400 hover:text-[#0077B5] transition-colors duration-300">
      <svg class="w-6 h-6 sm:w-7 sm:h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
    </a>
    <!-- GitHub -->
    <a href="#" aria-label="GitHub" class="text-gray-500 dark:text-gray-400 hover:text-black dark:hover:text-white transition-colors duration-300">
      <svg class="w-6 h-6 sm:w-7 sm:h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
    </a>
    <!-- Blog -->
    <a href="#" aria-label="Blog" class="text-gray-500 dark:text-gray-400 hover:text-[#20C997] transition-colors duration-300">
      <svg class="w-6 h-6 sm:w-7 sm:h-7" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 256 256"><path d="M208,32H48A16,16,0,0,0,32,48V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V48A16,16,0,0,0,208,32ZM98.34,173.66a8,8,0,0,1-11.32,0L64,150.59,40.94,173.66a8,8,0,0,1-11.32-11.32L52.69,142.28,29.64,119.22a8,8,0,0,1,11.31-11.31L64,127.31l23.06-23.06a8,8,0,0,1,11.31,11.31L75.31,142.28,98.34,162.34A8,8,0,0,1,98.34,173.66ZM160,128a8,8,0,0,1-8,8H120a8,8,0,0,1,0-16h32A8,8,0,0,1,160,128Zm32,32H120a8,8,0,0,1,0-16h72a8,8,0,0,1,0,16Z"></path></svg>
    </a>
  </div>

  <!-- 버튼 -->
  <div class="flex flex-col sm:flex-row gap-4 w-full justify-center">
    {isAboutPage ? (
      <>
        <a href="/blog/all/page/1" class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:shadow-xl transition-all duration-300 transform hover:scale-105 font-semibold text-base">
          블로그 보기
        </a>
        <a href="/project/page/1" class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-xl hover:border-blue-500 hover:text-blue-600 transition-all duration-300 transform hover:scale-105 font-semibold text-base">
          프로젝트 보기
        </a>
      </>
    ) : (
      <>
        <a href="/about" class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:shadow-xl transition-all duration-300 transform hover:scale-105 font-semibold text-base">
          더 알아보기
        </a>
        <a href="#projects" class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-xl hover:border-blue-500 hover:text-blue-600 transition-all duration-300 transform hover:scale-105 font-semibold text-base">
          프로젝트 보기
        </a>
      </>
    )}
  </div>
</div> 