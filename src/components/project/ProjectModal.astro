    setupSwipeGestures() {
      let startX = 0;
      let startY = 0;
      
      this.modal?.addEventListener('touchstart', (e) => {
        if (window.innerWidth >= 1024) return; // ë°ìŠ¤í¬í†±ì—ì„œëŠ” ìŠ¤ì™€ì´í”„ ë¹„í™œì„±í™”
        
