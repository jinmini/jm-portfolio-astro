---
import { twMerge } from 'tailwind-merge';

type Props = {
  className?: string;
  size?: 'narrow' | 'normal';
};

const { className, size = 'normal' } = Astro.props;

// 크기에 따른 최대 너비 설정 (1024px 일관성)
const maxWidthClass = size === 'narrow' ? 'max-w-4xl' : 'max-w-5xl';
// narrow: max-w-4xl (896px)
// normal: max-w-5xl (1024px) 
---

<section class={twMerge(
  // 기본 여백
  'mb-6 mt-6 lg:mb-16 lg:mt-20',
  // 반응형 padding
  'px-4 md:px-6 lg:px-8',
  // 중앙 정렬 및 최대 너비
  'mx-auto',
  maxWidthClass,
  className
)}>
  <slot />
</section> 