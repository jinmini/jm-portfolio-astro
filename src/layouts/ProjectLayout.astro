<!-- ÌîÑÎ°úÏ†ùÌä∏ ÏÉÅÏÑ∏ ÎÇ¥Ïö© -->
<article class="prose prose-lg max-w-none">
  <slot />
</article>

<style>
  .prose {
    color: #374151;
  }
  .prose h1, .prose h2, .prose h3, .prose h4 {
    color: #111827;
    font-weight: 700;
  }
  .prose h1 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }
  .prose h2 {
    font-size: 1.875rem;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }
  .prose h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .prose li {
    margin-bottom: 0.5rem;
  }
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  .prose code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  .prose blockquote {
    border-left: 4px solid #d1d5db;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
  .prose pre {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  .prose pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  /* Dark mode styles */
  :global(.dark) .prose {
    color: #d1d5db;
  }
  :global(.dark) .prose h1, 
  :global(.dark) .prose h2, 
  :global(.dark) .prose h3, 
  :global(.dark) .prose h4 {
    color: #f9fafb;
  }
  :global(.dark) .prose strong {
    color: #f9fafb;
  }
  :global(.dark) .prose code {
    background-color: #374151;
    color: #e5e7eb;
  }
  :global(.dark) .prose blockquote {
    border-left-color: #4b5563;
    color: #9ca3af;
  }

  /* Responsive typography for smaller screens */
  @media (max-width: 640px) {
    .prose h1 {
      font-size: 1.875rem; /* 30px */
    }
    .prose h2 {
      font-size: 1.5rem; /* 24px */
    }
    .prose h3 {
      font-size: 1.25rem; /* 20px */
    }
    .prose p {
      font-size: 0.95rem;
    }
  }
</style> 